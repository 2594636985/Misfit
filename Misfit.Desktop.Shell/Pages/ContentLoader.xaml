<UserControl x:Class="Misfit.Desktop.Shell.Pages.ContentLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mm="http://schemas.misfit.themes.com/wpf/xaml/toolkit"
             xmlns:app="clr-namespace:Misfit.Desktop.Shell"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mm:ModernTab SelectedSource="/Content/ContentLoaderIntro.xaml" Layout="Tab">
            <mm:ModernTab.Links>
                <mm:Link DisplayName="INTRO" Source="/Content/ContentLoaderIntro.xaml" />
                <mm:Link DisplayName="IMAGES" Source="/Content/ContentLoaderImages.xaml" />
            </mm:ModernTab.Links>
        </mm:ModernTab>
    </Grid>
</UserControl>
