<UserControl x:Class="Misfit.Modulation.Desktop.Shell.Pages.ControlsStyles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mm="http://schemas.misfit.themes.com/wpf/xaml/toolkit" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mm:ModernTab SelectedSource="/Content/ControlsStylesButton.xaml" Layout="List">
            <mm:ModernTab.Links>
                <mm:Link DisplayName="Button" Source="/Content/ControlsStylesButton.xaml" />
                <mm:Link DisplayName="DataGrid" Source="/Content/ControlsStylesDataGrid.xaml" />
                <mm:Link DisplayName="Date" Source="/Content/ControlsStylesDate.xaml" />
                <mm:Link DisplayName="ItemsControl" Source="/Content/ControlsStylesItemsControl.xaml"/>
                <mm:Link DisplayName="ProgressBar" Source="/Content/ControlsStylesProgressBar.xaml"/>
                <mm:Link DisplayName="Slider" Source="/Content/ControlsStylesSlider.xaml"/>
                <mm:Link DisplayName="Text" Source="/Content/ControlsStylesText.xaml" />
                <mm:Link DisplayName="Sample form" Source="/Content/ControlsStylesSampleForm.xaml" />
            </mm:ModernTab.Links>
        </mm:ModernTab>
    </Grid>

</UserControl>
