<UserControl x:Class="Misfit.Desktop.Shell.Pages.LayoutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:aomi="http://schemas.misfit.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <aomi:ModernTab SelectedSource="/Content/LoremIpsum.xaml" Layout="Tab">
            <aomi:ModernTab.Links>
                <aomi:Link DisplayName="Basic" Source="/Content/LoremIpsum.xaml" />
                <aomi:Link DisplayName="Split" Source="/Content/LoremIpsumSplit.xaml" />
                <aomi:Link DisplayName="List" Source="/Content/LoremIpsumList.xaml" />
            </aomi:ModernTab.Links>
        </aomi:ModernTab>
    </Grid>
</UserControl>
