<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mm="http://schemas.misfit.themes.com/wpf/xaml/toolkit"
                    xmlns:local="clr-namespace:Misfit.Desktop.Wpf">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Misfit.Desktop.Toolkit;component/Assets/ModernUI.Light.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Rectangle x:Key="WindowBackgroundContent" x:Shared="false" >
        <Rectangle.Fill>
            <ImageBrush local:BingImage.UseBingImage="True" Opacity=".3" Stretch="UniformToFill" />
        </Rectangle.Fill>
    </Rectangle>

</ResourceDictionary>