<UserControl x:Class="Misfit.Desktop.Wpf.Pages.ControlsModern"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mm="http://schemas.misfit.themes.com/wpf/xaml/toolkit" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mm:ModernTab SelectedSource="/Content/ControlsModernBBCodeBlock.xaml" Layout="List">
            <mm:ModernTab.Links>
                <mm:Link DisplayName="BBCodeBlock" Source="/Content/ControlsModernBBCodeBlock.xaml"/>
                <mm:Link DisplayName="ModernButton" Source="/Content/ControlsModernButton.xaml" />
                <mm:Link DisplayName="ModernDialog" Source="/Content/ControlsModernDialog.xaml" />
                <mm:Link DisplayName="ModernFrame" Source="/Content/ControlsModernFrame.xaml" />
                <mm:Link DisplayName="ModernMenu" Source="/Content/ControlsModernMenu.xaml" />
                <mm:Link DisplayName="ModernProgressRing" Source="/Content/ControlsModernProgressRing.xaml" />
                <mm:Link DisplayName="ModernWindow" Source="/Content/ControlsModernWindow.xaml" />
            </mm:ModernTab.Links>
        </mm:ModernTab>
    </Grid>
</UserControl>
